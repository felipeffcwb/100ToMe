@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .box-shadow {
        box-shadow: none !important;
    }
</style>
<div class="container-fluid headerEmail" style="min-height:400px;">
    <div class="row d-flex align-items-center justify-content-center">
        <div class="container">
            @if (ViewBag.NameUser != null)
            {
                <div class="col-lg-12 col-md-6 d-flex flex-column justify-content-center align-items-center" style="min-height:200px;">
                    <h1 class="text-white">Receba o que @ViewBag.NameUser preparou =)</h1>
                    <label class="text-white">Prepare seus próprios repositórios, <a href="@Url.Action("Index", "Home")" class="text-decoration-none text-white"><u>clique aqui!</u></a></label>
                </div>
                <div class="col-lg-12 col-md-6 d-flex flex-column justify-content-center align-items-center">
                    <form class="form-group p-0 col-lg-6 col-sm-12">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-at"></i>
                                </div>
                            </div>
                            <input type="email" class="form-control" id="emailInput" placeholder="Email" name="email">
                            <input type="hidden" name="repoLink" value="@ViewBag.repoLink">
                        </div>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="far fa-user"></i>
                                </div>
                            </div>
                            <input type="text" class="form-control col-lg-6 col-sm-12" id="nameInput" placeholder="Nome" name="nome">
                        </div>
                        <button type="submit" class="btn btn-success mb-2">Receber</button>
                    </form>
                </div>
            }
            else
            {
                <div class="col-lg-12 col-md-6 d-flex flex-column justify-content-center align-items-center" style="min-height:200px;">
                    <h1 class="text-white">@ViewBag.LinkNull</h1>
                    <label class="text-white">Prepare seus próprios repositórios, <a href="@Url.Action("Index", "Home")" class="text-decoration-none text-white"><u>clique aqui!</u></a></label>
                </div>
            }
        </div>
    </div>
</div>
<div class="container" style="min-height:100vh;">
    <div class="col-12 d-flex justify-content-center align-items-center" style="min-height:100px;">
        @if (ViewBag.SuccessShare != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert" style="height:60px; width:100%;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @ViewBag.SuccessShare
            </div>
        }
    </div>
    <div class="col-12 d-flex justify-content-between align-items-center" style="min-height:200px;">
        <label>Written with ❤️ from Brazil!</label>
        <ul class="d-flex list-unstyled">
            <li class="nav-item mr-3"><i class="fab fa-facebook"></i></li>
            <li class="nav-item mr-3"><i class="fab fa-instagram"></i></li>
            <li class="nav-item mr-3"><i class="fab fa-twitter-square"></i></li>
        </ul>
    </div>
</div>
